            } else {
              productNoError.textContent = '';
              return true;
            }
          }

          function validateName() {
            if (name.value.trim() === '') {
              nameError.textContent = 'Product Name is required.';
              return false;
            } else if (name.value.trim().length < 3) {
              nameError.textContent = 'Product Name must be at least 3 characters long.';
              return false;
            } else {
              nameError.textContent = '';
              return true;
            }
          }

          function validateDescription() {
            if (description.value.trim() === '') {
              descriptionError.textContent = 'Product Description is required.';
              return false;
            } else {
              descriptionError.textContent = '';
              return true;
            }
          }

          function validateStock() {
            if (stock.value === '' || stock.value <= 0) {
              stockError.textContent = 'Stock is required and must be greater than 0.';
              return false;
            } else {
              stockError.textContent = '';
              return true;
            }
