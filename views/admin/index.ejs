<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Esportes Admin</title>
  <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
  <link rel="stylesheet" href="../../assets/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/admin/index.css">
  <link rel="shortcut icon" href="/favicon.ico" />
</head>

<style>
</style>

<body>
  <div class="container-scroller">
    <%- include('../partials/_sidebaradmin') %>

      <div class="container-fluid page-body-wrapper">
        <nav class="navbar p-0 fixed-top d-flex flex-row">
          <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
            <a class="navbar-brand brand-logo-mini" href="index.html"><img src="/assets/images/logo-mini.svg"
                alt="logo" /></a>
          </div>
          <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
              <span class="mdi mdi-menu"></span>
            </button>
            <ul class="navbar-nav w-100">
            </ul>
            <ul class="navbar-nav navbar-nav-right">
              <li class="nav-item dropdown">
                <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
                  <div class="navbar-profile">
                    <img class="img-xs rounded-circle" src="/assets/images/faces/rash.jpg" alt="">
                    <p class="mb-0 d-none d-sm-block navbar-profile-name">Muhammad Rashad</p>
                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                  </div>
                </a>
                <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list"
                  aria-labelledby="profileDropdown">
                  <h6 class="p-3 mb-0">Profile</h6>
                  <div class="dropdown-divider"></div>
                  <a href="/Settings" class="dropdown-item preview-item">
                    <div class="preview-thumbnail">
                      <div class="preview-icon bg-dark rounded-circle">
                        <i class="mdi mdi-settings text-success"></i>
                      </div>
                    </div>
                    <div class="preview-item-content">
                      <p class="preview-subject mb-1">Settings</p>
                    </div>
                  </a>
                  <div class="dropdown-divider"></div>
                  <a href="/logout" class="dropdown-item preview-item">
                    <div class="preview-thumbnail">
                      <div class="preview-icon bg-dark rounded-circle">
                        <i class="mdi mdi-logout text-danger"></i>
                      </div>
                    </div>
                    <form method="post" action="/admin/logout">
                      <div class="preview-item-content">
                        <button class="preview-subject mb-1" type="submit"
                          style=" margin-left: 10PX; background-color:  transparent; border: none; color: white; font-size: small;">Log
                          out</button>
                      </div>
                    </form>
                  </a>
                  <div class="dropdown-divider"></div>
                  <p class="p-3 mb-0 text-center">Advanced settings</p>
                </div>
              </li>
            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
              data-toggle="offcanvas">
              <span class="mdi mdi-format-line-spacing"></span>
            </button>
          </div>
        </nav>
        <div class="main-panel pt-5">
          <div class="text-center content-wrapper p-5">
            <div class="page-header">
              <h3 class="page-title text-light">Overall Management</h3>
            </div>

            <div class="row">
              <div class="col-md-3">
                <div class="card hover-card bg-info text-white mb-4">
                  <div class="card-body">
                    <h5>Total Users</h5>
                    <h2>
                      <%= totalUsers %>
                    </h2>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card hover-card bg-success text-white mb-4">
                  <div class="card-body">
                    <h5>Total Orders</h5>
                    <h2>
                      <%= totalOrders %>
                    </h2>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card hover-card bg-warning text-white mb-4">
                  <div class="card-body">
                    <h5>Total Sales Amount</h5>
                    <h2>$<%= totalSalesAmount.toFixed(2) %>
                    </h2>
                  </div>
                </div>
              </div>

              <div class="col-md-3">
                <div class="card hover-card bg-danger text-white mb-4">
                  <div class="card-body">
                    <h5>Pending Orders</h5>
                    <h2>
                      <%= pendingOrders %>
                    </h2>
                  </div>
                </div>
              </div>
            </div>

            <div class="text-center mt-5">
              <h4>Best Selling Products</h4>
              <table class="table table-bordered">
                <thead>
                  <tr class="main">
                    <th>Sl. No</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Total Sold</th>
                  </tr>
                </thead>
                <tbody>
                  <% bestSellingProducts.forEach((product, index)=> { %>
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <%= product.name %>
                      </td>
                      <td><img src="/uploads/<%= product.images[0] %>" /></td>
                      <td>
                        <%= product.totalSold %>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>

            <div class="text-center mt-5">
              <h4>Best Selling Categories</h4>
              <table class="table table-bordered">
                <thead>
                  <tr class="main">
                    <th>Sl. No</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Total Sold</th>
                  </tr>
                </thead>
                <tbody>
                  <% bestSellingCategories.forEach((category, index)=> { %>
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <%= category.name %>
                      </td>
                      <td><img src="/uploads/<%= category.image %>" alt="<%= category.name %>" /></td>
                      <td>
                        <%= category.totalSold %>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
            <!-- Total Sales Amount Chart -->
            <div class="mt-5">
              <h4 class="text-center mb-4">Total Sales Amount</h4>
              <div class="mb-3">
                  <label for="sales-filter" class="form-label">Select Timeframe : </label>
                  <select id="sales-filter" class="form-select form-select-lg" style="width: 150px; height: 30px; border-radius: 10px;  background-color: #f8f9fa;">
                      <option value="weekly">Weekly</option>
                      <option value="monthly" selected>Monthly</option>
                      <option value="yearly">Yearly</option>
                  </select>
              </div>
              <canvas id="salesChart" width="400" height="200"></canvas>
          </div>
          

          </div>
        </div>

      </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  
</script>

  <script src="assets/vendors/js/vendor.bundle.base.js"></script>
  <script src="assets/vendors/chart.js/Chart.min.js"></script>
  <script src="assets/vendors/progressbar.js/progressbar.min.js"></script>
  <script src="assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
  <script src="assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
  <script src="assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
  <script src="assets/js/off-canvas.js"></script>
  <script src="assets/js/hoverable-collapse.js"></script>
  <script src="assets/js/misc.js"></script>
  <script src="assets/js/settings.js"></script>
  <script src="assets/js/todolist.js"></script>
  <script src="assets/js/dashboard.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="/adminjs/index.js"></script>



</body>

</html>