<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification - Esportes</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden; /* Prevent scrolling */
        }
        .navbar {
            display: flex;
            justify-content: center; /* Center the image horizontally */
            align-items: center; /* Center the image vertically */
            height: 80px; /* Set a height for the navbar */
        }
        .navbar img {
            max-height: 100%; /* Ensure the image fits within the navbar height */
        }
        #timer {
            font-size: 14px;
            font-weight: medium;
            color: red;
        }
        #validationMessage {
            color: red;
            font-size: 14px;
            margin-top: 10px;
        }
    </style>
</head>

<body style="background: white">

    <nav class="navbar bg-white">
        <img src="./images/Heading.png" class="img-fluid">
    </nav>

    <!-- OTP Verification Form -->
    <section class="p-5 d-flex align-items-center justify-content-center" style="background: white">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <img src="./images/set.jpg" class="img-fluid" style="width: 380px" alt="">
                </div>  
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <h1 class="text-center mb-4 fw-bold">OTP Verification</h1>
                            <form action="/otpverification" method="post">
                                <div class="mb-3">
                                    <label for="otp" class="form-label fw-bold">Enter OTP</label>
                                    <input type="text" class="form-control" id="otp" name="otp" placeholder="Enter the OTP sent to your email" required>
                                </div>
                                <!-- Timer Display -->
                                <p id="timer">Time remaining : <span id="countdown">05:00</span></p>
                                <p id="validationMessage" style="display:none;">OTP expired. Please resend the OTP.</p>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-dark">Verify</button>
                                </div>
                                <!-- Resend OTP message -->
                                <p class="text-center mt-3" id="resendMessage" style="display:none;">
                                    Didn't receive the OTP? <a href="/resendotp" class="text-primary" id="resendOtpLink">Resend OTP</a>
                                </p>
                                <!-- Validation message after 60 seconds -->
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript for OTP Timer -->
    <script>
let timeLeft = 5 * 60; // 5 minutes in seconds
const timerElement = document.getElementById("countdown");
const timerParagraph = document.getElementById("timer");
const resendMessage = document.getElementById("resendMessage");
const validationMessage = document.getElementById("validationMessage");

const countdown = setInterval(() => {
    if (timeLeft >= 0) {
        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        timerElement.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        timeLeft--;
    } else {
        clearInterval(countdown);
        // Hide the timer after it reaches 00:00
        timerParagraph.style.display = "none";
        // Show the resend message and validation message
        resendMessage.style.display = "block";
        validationMessage.style.display = "block";
    }
}, 1000);

    </script>

</body>

</html>
