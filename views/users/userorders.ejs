                        <script>
                            document.addEventListener('DOMContentLoaded', () => {
                                document.querySelectorAll('.pay-again-btn').forEach(button => {
                                    button.addEventListener('click', async function () {
                                        const orderId = this.getAttribute('data-id');
                                        console.log(orderId);

                                        payAgain(orderId);
                                    });
                                });
                            });


                            async function payAgain(orderId) {
                                try {
                                    // Fetch the order details for the specified order ID
                                    const response = await fetch(`/get-order/${orderId}`);
                                    const order = await response.json();

                                    if (!order || !order.totalAfterDiscount) {
                                        console.error('Order details could not be retrieved.');
                                        return;
                                    }

                                    // Set up Razorpay options
                                    const razorpayOptions = {
                                        key: 'rzp_test_jQwdUt0mQkB6AR', // Razorpay Key ID
                                        amount: order.totalAfterDiscount * 100, // Convert to paise
                                        currency: 'INR',
                                        name: 'Esportes',
                                        description: 'Purchase Products',
                                        order_id: order.razorpayOrderId, // Razorpay Order ID from backend

                                        // Handler for successful payment
                                        handler: async function (response) {
                                            const updateOrderData = {
                                                razorpay_payment_id: response.razorpay_payment_id || null,
                                                status: response.razorpay_payment_id ? "Pending" : "Payment Failure"
                                            };

                                            // Update the order status on the server
                                            await fetch(`/update-order/${orderId}`, {
                                                method: 'POST',
                                                headers: {
                                                    'Content-Type': 'application/json',
                                                },
                                                body: JSON.stringify(updateOrderData),
                                            });

                                            // Redirect to the order confirmation page
                                            window.location.href = `/order-confirmation/${orderId}`;
                                        },

                                        // Handle Razorpay modal dismissal
                                        modal: {
                                            ondismiss: async function () {
                                                // Update order status to "Payment Failure" if the user dismisses Razorpay
                                                await fetch(`/update-order/${orderId}`, {
                                                    method: 'POST',
                                                    headers: {
                                                        'Content-Type': 'application/json',
                                                    },
                                                    body: JSON.stringify({ status: "Payment Failure" }),
                                                });

                                                // Redirect to the order confirmation page
                                                window.location.href = `/order-confirmation/${orderId}`;
                                            }
                                        },

                                        // Prefill customer details
                                        prefill: {
                                            name: 'Esportes',
                                            email: 'ecommerceesportes@gmail.com',
                                            contact: '9656801830'
                                        },
                                        theme: {
                                            color: '#F37254'
                                        }
                                    };

                                    // Initiate Razorpay
                                    const razorpay = new Razorpay(razorpayOptions);
                                    razorpay.open();

                                } catch (error) {
                                    console.error('Error initializing Razorpay:', error);
                                }
                            }

                        </script>

